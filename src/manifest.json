{
  "manifest_version": 3,
  "name": "汉典",
  "description": "汉典 chrome 插件，在网页中选中文本后点击插件图标即可查询。",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "id": "bing",
      "matches": [
        "https://cn.bing.com/dict*"
      ],
      "js": [
        "scripts/bing-content.js"
      ],
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}
